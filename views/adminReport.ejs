<!DOCTYPE html>
<html>
  <head>
    <%- include ../common/bootstrap.ejs %>
    <link rel="shortcut icon" href="images/ofavicon.ico" />
    <title></title>

    <script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.js"></script>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/jszip-2.5.0/dt-1.10.16/b-1.5.1/b-colvis-1.5.1/b-flash-1.5.1/b-html5-1.5.1/b-print-1.5.1/datatables.min.css"/>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/jszip-2.5.0/dt-1.10.16/b-1.5.1/b-colvis-1.5.1/b-flash-1.5.1/b-html5-1.5.1/b-print-1.5.1/datatables.min.js"></script>

  </head>
  <body>
    <div class="">
        <%- include ../common/header.ejs %>
    </div>
    <div class="container">

      <form class="form-horizontal">
        <div class="form-group">
          <label class="control-label col-sm-2" for="userCount">가입자수 : </label>
          <div class="col-sm-10">
            <p class="form-control-static"><%= userCount%></p>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2" for="userCount">탈퇴자수 : </label>
          <div class="col-sm-10">
            <p class="form-control-static"><%= disabledCount%></p>
          </div>
        </div>

        <div class="form-group">
          <label class="control-label col-sm-2" for="userCount">TX건수 : </label>
          <div class="col-sm-10">
            <p class="form-control-static"><%= txCount%></p>
          </div>
        </div>
      </form>

      <table id="userList" class="table table-striped" cellspacing="0" width="100%">
        <thead>
          <tr>
            <td>거래일시</td>
            <td>발행금액</td>
            <td>이더금액</td>
          </tr>
        </thead>
        <tbody>
          <% for(var index in data){ %>
          <tr>
            <td><%=data[index][transactionTime]%></td>
            <td><%=data[index][gmov]%></td>
            <td><%=data[index][ether]%></td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <script type="text/javascript">
      $(document).ready(function() {
        $('#userList').DataTable({
          dom: 'Blfrtip',
          lengthMenu : [
            [10, 25, 50, -1],
            ['10 rows', '25 rows', '50 rows', 'Show all']
          ],
          buttons: [
            'excel'
          ]
        });
      });
      </script>

    </div>
  </body>
</html>
